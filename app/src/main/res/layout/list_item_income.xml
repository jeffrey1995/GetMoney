<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8">

        <TextView
            android:id="@+id/income_list_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/income_list_item_padding"
            android:layout_marginTop="@dimen/income_list_item_padding"
            android:text="[转发佣金]title"
            android:textSize="@dimen/income_list_item_title_size" />

        <TextView
            android:id="@+id/income_list_item_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/income_list_item_title_tv"
            android:layout_marginLeft="@dimen/income_list_item_padding"
            android:layout_marginTop="@dimen/income_list_item_padding"
            android:text="2016-01-01 00:00:00"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/income_list_item_date_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TextView
            android:id="@+id/income_list_item_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/income_list_item_padding"
            android:layout_marginRight="@dimen/income_list_item_padding"
            android:layout_marginTop="@dimen/income_list_item_padding"
            android:text="0元"
            android:textSize="@dimen/income_list_item_money_size" />
    </RelativeLayout>
</LinearLayout>
