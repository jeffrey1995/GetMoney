<resources xmlns:android="http://schemas.android.com/tools">
    <!--ForwardDialog-->
    <style name="forward_dialog" parent="android:Theme">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>  <!--半透明-->
        <item name="android:windowAnimationStyle">@android:anim/slide_out_right</item>
    </style>

    <!--RoundImageView-->
    <declare-styleable name="roundedimageview">

        <attr name="border_thickness"
            format="dimension"/>

        <attr name="border_inside_color"
            format="color"/>

        <attr name="border_outside_color"
            format="color"/>

    </declare-styleable>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="UpdateDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal"></style>

    <style name="ProgressBar.Update" parent="ProgressBar">
        <item name="android:progressDrawable">@drawable/widget_progressbar</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:maxHeight">35dp</item>
    </style>

</resources>
