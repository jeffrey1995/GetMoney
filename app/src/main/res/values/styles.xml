<resources xmlns:android="http://schemas.android.com/tools">
    <!--ForwardDialog-->
    <style name="forward_dialog" parent="android:Theme">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>  <!--半透明-->
        <item name="android:windowAnimationStyle">@android:anim/slide_out_right</item>
    </style>

    <!--RoundImageView-->
    <declare-styleable name="roundedimageview">

        <attr name="border_thickness"
            format="dimension"/>

        <attr name="border_inside_color"
            format="color"/>

        <attr name="border_outside_color"
            format="color"/>

    </declare-styleable>

</resources>
